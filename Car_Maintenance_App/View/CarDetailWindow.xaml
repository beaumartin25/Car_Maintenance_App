<Window x:Class="Car_Maintenance_App.View.CarDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Maintenance_App.View"
        mc:Ignorable="d"
        Title="CarDetailWindow" Height="650" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Car Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Make:"/>
            <TextBox Text="{Binding Car.Make, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="Model:"/>
            <TextBox Text="{Binding Car.Model, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="Year:"/>
            <TextBox Text="{Binding Car.Year, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="VIN:"/>
            <TextBox Text="{Binding Car.VIN, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="License Plate:"/>
            <TextBox Text="{Binding Car.LicensePlate, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="Color:"/>
            <TextBox Text="{Binding Car.Color, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="Mileage:"/>
            <TextBox Text="{Binding Car.Mileage, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,10"/>

            <TextBlock Text="Status:"/>
            <ComboBox ItemsSource="{Binding StatusOptions}"
                      SelectedItem="{Binding Car.Status, UpdateSourceTrigger=LostFocus}"
                      Margin="0,0,0,10"/>
            <Button Content="Update"
                    Command="{Binding UpdateCarCommand}"
                    Width="100"
                    Margin="0,10,0,0" />
            <TextBlock Text="Services:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox ItemsSource="{Binding Services}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Type}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
